<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Icosnet Test</title>
    <link rel="stylesheet" href="/public/style.css">
    <link rel="stylesheet" href="/public/create.css">
    <script defer src="/public/alpine.min.js"></script>

</head>
<body>

    <h1>Enhanced Order Management System</h1>
    <%- include('template/header.ejs',role) %>
    <% switch(page) {
        case 'create' : %>
        <% if (role=='client') { %>
            <%- include('order/create.ejs') %> 
            <% } else { %>   
                <h3>Not Allowed</h3>
                <% } %>        
        <% break;
        case 'all' : %>
        <%- include('order/table.ejs') %>        
        <% break;
        case 'one' : %>
        <%- include('order/single.ejs') %>        
        <% break;
        case 'login' : %>
        <% if (role=='visitor') { %>
        <%- include('client/login.ejs') %> 
        <% } else { %>   
            <h3>You're Loged</h3>
            <% } %>
 
        <% break;
        default : %>
        <div>nothing here</div>
        <% break;
        }
        %>
</body>
</html>